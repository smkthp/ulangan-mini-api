// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id   Int     @id @default(autoincrement())
  name String
  desc String?

  @@map("tasks")
}

model Question {
  id   Int    @id @default(autoincrement())
  body String

  @@map("questions")
}

model Answer {
  id      Int     @id @default(autoincrement())
  body    String
  correct Boolean

  @@map("answers")
}
